<%= render :partial => 'docflows/head' %>

<div class="contextual">
  <%= link_to(l(:label_docflow_add_type), {:controller => 'docflow_types', :action => 'new'}, :class => 'icon icon-add')  %>
</div>

<h2><%= l(:label_docflow) %> / <%= l(:label_docflow_types) %> </h2>

<br />
<% @types.each do |df_type| %>
  <div id="dt<%= df_type.id %>" class='bottom-bordered'>
    <table class='invisi-table'>
      <tr>
        <td><%= link_to( df_type.name, edit_docflow_type_path(df_type) ) %></td>
        <td class="button_area"><%= link_to( '&nbsp;'.html_safe, docflow_type_path(df_type),
                          :confirm => l(:label_docflow_delete_type_confirm),
                          :method => :delete, 
                          :action => :destory, 
                          :class => 'icon-del icon-only') %></td>
      </tr>
    </table>
  </div>
<% end %>

<% content_for :sidebar do %>
  <%= render :partial => 'docflows/sidebar' %>
<% end %>